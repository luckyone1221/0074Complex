mixin whiteForm(data)
	+b.white-form
		+form-wrap
			+e.title
				h2=data.title
				p=data.descr
			+e.inputs
				+input('Ваше имя', 'text')
				+input('+7 (___) ___ - __ - __', 'tel')
				+input('Ваш email', 'email')
			+e.btn(type="submit") Отправить
			+e.polite
				+in-c('checkbox')(checked)
					span.square
					+e.txt Отправляя заявку, вы соглашаетесь с политикой конфиденциальности и пользовательским соглашением

mixin sProdCardGrayItem(data)
	.col-xl-6
		+e.gray-box
			h4=data.title
			ul
				-for(let [key, val] of data.list)
					li
						b=key
						span!=val

mixin sProdCardCharsItem(key, val)
	+e.char
		+e.ch-row.row
			+e.key-col.col-6=key
			+e.val-col.col-6=val