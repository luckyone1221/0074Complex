			.col-lg-6
				+e.img-box
					img(loading="lazy" src="img/@2x/sProdCard-img.png" alt="")
			.col-lg-6
				+e.chars-wrap
					+e.chars
						+sProdCardCharsItem('Размеры:', '20х10')
						+sProdCardCharsItem('Толщина:', '5 см')
						+sProdCardCharsItem('Комплект:', '50 шт./м2')
